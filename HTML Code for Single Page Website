<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const cartItems = [];
        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', () => {
                const productName = button.getAttribute('data-name');
                const productPrice = parseFloat(button.getAttribute('data-price'));
                const productImage = button.getAttribute('data-image');
                const item = {
                    name: productName,
                    price: productPrice,
                    image: productImage,
                    quantity: 1, // Initialize quantity to 1
                };
                const existingItem = cartItems.find(cartItem => cartItem.name === item.name);
                if (existingItem) {
                    existingItem.quantity++; // Increase quantity
                } else {
                    cartItems.push(item); // Add the item to the cart
                }
                updateCartTotal();
                displayCartItems();
                alert(`${productName} added to cart`);
            });
        });
        function removeItem(itemName) {
            const indexToRemove = cartItems.findIndex(item => item.name === itemName);
            if (indexToRemove !== -1) {
                cartItems.splice(indexToRemove, 1);
                updateCartTotal();
                displayCartItems();
                alert(`${itemName} removed from cart`);
            }
        }
        function updateCartTotal() {
            const cartTotalElement = document.getElementById('cart-total');
            const cartTotal = cartItems.reduce((total, item) => total + item.price * item.quantity, 0);
            cartTotalElement.textContent = cartTotal.toFixed(2);
        }
        function displayCartItems() {
            const cartItemsContainer = document.querySelector('.cart-items');
            cartItemsContainer.innerHTML = '';
            cartItems.forEach(item => {
                const cartItemElement = document.createElement('div');
                cartItemElement.classList.add('cart-item');
                cartItemElement.innerHTML = `
                    <div class="cart-item-details">
                        <img src="${item.image}" alt="${item.name}" class="img-fluid cart-item-image">
                    </div>
                    <div class="cart-item-info">
                        <p>${item.name}</p>
                        <p>$${(item.price * item.quantity).toFixed(2)}</p>
                    </div>
                    <div class="cart-item-quantity">
                        <button class="quantity-btn decrease-quantity" data-item-name="${item.name}">-</button>
                        <span class="quantity">${item.quantity}</span>
                        <button class="quantity-btn increase-quantity" data-item-name="${item.name}">+</button>
                    </div>
                    <div class="cart-item-remove">
                        <button class="remove-item-btn" data-item-name="${item.name}">Remove</button>
                    </div>
                `;
                const increaseQuantityButton = cartItemElement.querySelector('.increase-quantity');
                increaseQuantityButton.addEventListener('click', () => {
                    increaseQuantity(item.name);
                });
                const decreaseQuantityButton = cartItemElement.querySelector('.decrease-quantity');
                decreaseQuantityButton.addEventListener('click', () => {
                    decreaseQuantity(item.name);
                });
                const removeItemButton = cartItemElement.querySelector('.remove-item-btn');
                removeItemButton.addEventListener('click', () => {
                    removeItem(item.name);
                });
                const cartItemImage = cartItemElement.querySelector('.cart-item-image');
                cartItemImage.style.width = '300px'; // Adjust the width as needed
                cartItemImage.style.height = '200px'; // Adjust the height as needed
                cartItemsContainer.appendChild(cartItemElement);
            });
        }
        function increaseQuantity(itemName) {
            const itemToUpdate = cartItems.find(item => item.name === itemName);
            if (itemToUpdate) {
                itemToUpdate.quantity++;
                updateCartTotal();
                displayCartItems();
                alert(`Quantity of ${itemName} increased to ${itemToUpdate.quantity}`);
            }
        }
        function decreaseQuantity(itemName) {
            const itemToUpdate = cartItems.find(item => item.name === itemName);
            if (itemToUpdate && itemToUpdate.quantity > 1) {
                itemToUpdate.quantity--;
                updateCartTotal();
                displayCartItems();
                alert(`Quantity of ${itemName} decreased to ${itemToUpdate.quantity}`);
            }
        }
        function checkout() {
            if (cartItems.length === 0) {
                alert('No items in the cart. Please add items to your cart before checking out.');
            } else {
                // Display the user details modal
                const userDetailsModal = document.getElementById('user-details-modal');
                userDetailsModal.style.display = 'block';
            }
        }
        const checkoutButton = document.getElementById('checkout-btn');
        checkoutButton.addEventListener('click', checkout);
        const checkoutForm = document.getElementById('checkout-form');
        checkoutForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            if (cartItems.length > 0) {
                alert(`Checkout successful! Thank you for your purchase.`);
                clearCart();
                clearUserDetails();
                const userDetailsModal = document.getElementById('user-details-modal');
                userDetailsModal.style.display = 'none';
            } else {
                alert('No items in the cart. Please add items to your cart before checking out.');
            }
        });
        function clearCart() {
            cartItems.length = 0; // Clear the cart array
            updateCartTotal(); // Update the cart total
            displayCartItems(); // Update the cart display
        }
        function clearUserDetails() {
            document.getElementById('name').value = '';
            document.getElementById('email').value = '';
        }
        const closeModalButton = document.getElementById('close-modal');
        closeModalButton.addEventListener('click', () => {
            const userDetailsModal = document.getElementById('user-details-modal');
            userDetailsModal.style.display = 'none';
        });
        displayCartItems();
        updateCartTotal();
    </script>
</body>
</html>
